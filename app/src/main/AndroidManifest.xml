<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.external">

    <uses-permission android:name="android.permission.CALL_PHONE" /><!--获取手机的信息-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /><!--显示系统窗口-->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" /><!--能否联网-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" /><!--wifi状态权限-->
    <uses-permission
        android:name="android.permission.WRITE_SECURE_SETTINGS"
        tools:ignore="ProtectedPermissions" /><!--允许程序读写-->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" /><!--允许程序写入外部存储-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /><!--允许程序读取外部存储-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /><!--获取网络信息状态-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /><!--获取当前WiFi接入的状态-->
    <uses-permission android:name="android.permission.INTERNET" /><!--网络权限-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /><!--访问电话状态-->
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" /><!--允许读写系统设置项-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/net_work"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.External"
        tools:targetApi="n">

        <activity
            android:name=".ui.activity.StartActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.LoginActivity"
            android:label="Login"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="Home"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.activity.BankInformationActivity"
            android:label="Bank Information"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.activity.WorkInformationActivity"
            android:label="Work Information"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.activity.MyProfileActivity"
            android:label="My Profile"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.activity.BasicInformationActivity"
            android:label="Basic Information"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.activity.GetMoneyActivity"
            android:label="Get Money"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.activity.ReviewingActivity"
            android:label="Reviewing"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.activity.IdentificationActivity"
            android:label="Identification"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity android:name=".ui.activity.FeedbackActivity"
            android:label="Feedback"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data
            android:name="design_width_in_dp"
            android:value="375" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="667" />
    </application>

</manifest>