<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".ui.activity.WorkInformationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/header_titless"
        style="@style/AppTheme.Toolbar"
        android:layout_height="74dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/work_msg_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_15"
                android:src="@mipmap/icon_back"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Work information"
                android:textColor="#ffffffff"
                android:textSize="19sp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/header_titless"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:text="Employment Type"
            android:textColor="#ff1e2f4b"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/employment_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/employment_text"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="33dp"
                android:textColor="#ff1e2f4b"
                android:textSize="20sp"
                android:padding="@dimen/dp_8"
                android:gravity="center_vertical"
                android:background="@drawable/shape_edit_basic" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="54dp"
                android:background="@mipmap/next_basic" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:textStyle="bold"
            android:text="Your Monthly Salary"
            android:textColor="#ff1e2f4b"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/relative_monthly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/monthly_text"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="33dp"
                android:textColor="#ff1e2f4b"
                android:textSize="20sp"
                android:padding="@dimen/dp_8"
                android:gravity="center_vertical"
                android:background="@drawable/shape_edit_basic" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="54dp"
                android:background="@mipmap/next_basic" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:textStyle="bold"
            android:text="Monthly Family Income"
            android:textColor="#ff1e2f4b"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/relative_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/family_text"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="33dp"
                android:textColor="#ff1e2f4b"
                android:textSize="20sp"
                android:padding="@dimen/dp_8"
                android:gravity="center_vertical"
                android:background="@drawable/shape_edit_basic" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="54dp"
                android:background="@mipmap/next_basic" />
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_save_work"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="27dp"
        android:background="@mipmap/save_basic"
        android:gravity="center"
        android:text="Save"
        android:textColor="#ffffff"
        android:textSize="22sp" />
</RelativeLayout>